@using Blibrary.Shared.Components.Base
@using Blibrary.Shared.Enums
@inherits StyleableBaseComponent


<div class="card @Class @(BgColor?.ToBgColor())" style="@Style">
    @if (CardHeader is not null)
    {
        <div class="card-header">
            @CardHeader
        </div>
    }
    <div class="card-body">
        @if(CardTitle is not null)
        {
            <div class="card-title">
                @CardTitle
            </div>
        }
        @CardBody
    </div>
    @if(CardFooter is not null)
    {
        <div class="card-footer">
            @CardFooter
        </div>
    }
</div>

@code {

    [Parameter]
    public RenderFragment? CardHeader { get; set; }

    [Parameter, EditorRequired]
    public required RenderFragment CardBody { get; set; }

    [Parameter]
    public RenderFragment? CardFooter { get; set; }

    [Parameter]
    public RenderFragment? CardTitle { get; set; }

}
